#!/bin/bash
echo "--> Starting S2I build..."

echo "--> Working from /tmp/src..."
cd /tmp/src

echo "--> Installing dependencies..."
pip install --no-cache-dir --target=/opt/app-root/lib/python3.9/site-packages -r requirements.txt

echo "--> Copying application source to /opt/app-root/src..."
mkdir -p /opt/app-root/src
cp -r . /opt/app-root/src

echo "--> Build completed successfully!"
