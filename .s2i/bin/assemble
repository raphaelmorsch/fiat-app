#!/bin/bash
echo "---> Installing application source..."

# Cria diretório de trabalho se não existir
mkdir -p /opt/app-root/src

# Copia os arquivos
cp -Rf /tmp/src/. /opt/app-root/src/ 2>/dev/null || :

echo "---> Installing Python dependencies..."
cd /opt/app-root/src

# Instala no diretório home do usuário
export PIP_TARGET="/opt/app-root/src/.local"
export PATH="/opt/app-root/src/.local/bin:${PATH}"

pip install --no-cache-dir -r requirements.txt

echo "---> Application setup completed"