#!/bin/bash
echo "--> Starting S2I build..."

# NÃO tenta criar diretórios, NÃO define HOME
# Apenas usa o que o S2I já fornece

echo "--> Working from /tmp/src..."
cd /tmp/src

echo "--> Installing dependencies WITHOUT --user flag..."
# Instala SEM --user - deixa o pip decidir onde instalar
pip install -r requirements.txt

echo "--> Build completed successfully!"