#!/bin/bash
echo "--> Starting application..."

# O S2I Python já deve ter configurado o ambiente
# Apenas executa a aplicação

echo "--> Current directory: $(pwd)"
echo "--> Contents:"
ls -la

if [ -f "app.py" ]; then
    echo "--> Starting Flask application..."
    exec python app.py
else
    echo "ERROR: app.py not found!"
    exit 1
fi